          <button class="btn btn-lg btn-primary btn-block mt-3" type="submit"> Save changes </button>

        </form>

          <div class="btn-group" style="border: 2px solid blue">
            <form action="/auth/profile/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete your profile?');">
                <button class="btn btn-lg btn-outline-primary  mt-3" type="submit">Delete</button>
            </form>
          </div>
        </div>
      </div> 
  </div> 
</div> 








