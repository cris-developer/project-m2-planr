
<div class="container-profile-edit"> 
	<div class="container-profile">
		<div class="profile">
			<div class="profile-image">
       			 <img src={{user.photoUrl}} alt={{user.name}}>
				  <h1 class="profile-user-name">{{user.firstName}} {{user.lastName}}</h1>
      </div>
      <div class="profile-user-settings">
        <form action="/auth/profile/edit" method="POST">

            <label for="first name">First Name:</label>
            <input type="text" name="firstName" id="first-name-input" value="{{user.name.firstName}}"class="form-control mt-2"/>

            <label for="first name">Last Name:</label>
            <input type="text" name="lastName" id="last-name-input" value="{{user.name.lastName}}"class="form-control mt-2"/>

            <label for="last name">Email:</label>
            <input type="text" name="email" id="email-input" value={{user.email}} class="form-control mt-2"/>
