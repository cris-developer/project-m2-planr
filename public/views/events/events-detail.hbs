{{!-- events-details.hbs --}}
<div class="main-container">

    <!--Event details-->
    <div class ="container" style="margin-top: 50px;">
        <h3 class="text-center">{{event.name}}</h3><br>
        <div class="row">
            <div class="col-lg-6">
                <img src={{event.photoUrl}} class="img-responsive center-block" style="width:100%; border-radius: 10px;" height="auto" alt="Image">
            </div>
            <div class="col-lg-6"> 
                <div class="container text-justify">   
                    <p class ="text-justify"><b>Description: </b> {{event.description}} </p>
                    <p class ="text-justify"><b>Event Type: </b>  {{event.type}}</p>
                    <p class ="text-justify"><b>Location: </b>  {{event.location}}</p>
                    <p class ="text-justify"><b>Date and Time: </b>  {{justDate}} at {{justTime}}</p>
                    <p class ="text-justify"><b>Host:</b> <img src={{event.host.photoUrl}} {{event.host.name.firstName}} id="photo-icon"></p> 
                    <p class ="text-justify"><b>Attendees: </b>  {{#each event.attendees}}
                    <img src="{{this.photoUrl}}" id="photo-icon"> 
                    {{/each}}</p>
                <div> 
            </div>  
            
        </div>
    </div>

    <!-- Buttons -->
    <div class="container">
        <div class="container" id="event-buttons">
            <form action='/events/{{event._id}}' method='post'>
                <button type="submit" class="btn btn-primary">Book</button> 
            </form>

            {{#if isHosting}}
            <form action='/events/{{event._id}}/edit' method='get'>
                <button type="submit" class="btn btn-secondary">Edit</button> 
            </form>

            <form action='/events/{{event._id}}/delete' onsubmit="return confirm('Are you sure you want to delete this event?');" method='post'>
                <button type="submit" class="btn btn-danger">Delete</button> 
            </form>
            {{/if}}   
        </div>
    <!-- Map -->   
    </div>
    <div id='map' style='width: 1200px; height: 300px;border-radius: 5px'>
    </div>
    </div>
    <!-- Comments -->
     <div class="card-body">
	        <div class="row">
        	    <div class="col-md-2">
                    <img src="https://image.ibb.co/jw55Ex/def_face.jpg" class="img img-rounded img-fluid"/>
                    <img src={{user.photoUrl}} alt={{user.name.lastName}} id="photo-icon">
        	        <p class="text-secondary text-center">15 Minutes Ago</p>
        	    </div>
        	    <div class="col-md-10">
        	        <p>
        	            <a class="float-left" {{user.name.firstName}} {{user.name.lastName}} ><strong>Maniruzzaman Akash</strong></a> 
        	       </p>
                    <div class="col-md-16">
                        <form action="'/events/{{event._id}}/comments'  method="POST">
                            <label for="inputComment"></label>
                            <input type="text" class="form-control" id="inputComment" name="comment" value="{{event.comment.text}}" required>
                        </form>
                    </div>
	            </div>
            </div>
</div>