{{!-- events-details.hbs --}}

<h1>{{name}}</h1>
<hr>

<form action='/events/{{event._id}}' method='post'>
    <button type="submit" class="btn btn-primary">Book</button> 
</form>

{{#if isHosting}}
<form action='/events/{{event._id}}/edit' method='get'>
    <button type="submit" class="btn btn-secondary">Edit</button> 
</form>

<form action='/events/{{event._id}}/delete' onsubmit="return confirm('Are you sure you want to delete this event?');" method='post'>
    <button type="submit" class="btn btn-danger">Delete</button> 
</form>
{{/if}}

{{!-- <button type="submit">Cancel</button> --}}
<div id=img-box>
    <img src={{event.photoUrl}}>
</div>

<p>Event Name: {{event.name}}</p>
<p>Date and Time: {{justDate}} at {{justTime}}</p>
<p>Description: {{event.description}}</p>
<p>Event Type: {{event.type}}</p>
<p>Location: {{event.location}}</p>
<p>Host: {{event.host.name.firstName}} {{event.host.name.lastName}}</p>
<p>Attendees: {{#each event.attendees}}
    {{name.firstName}} {{name.lastName}}
    {{/each}}</p>
<hr>
<a href="/events">Back</a>