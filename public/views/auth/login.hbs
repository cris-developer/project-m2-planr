
	<div class="container" id="login-signup" style="width: 500px; text-align: center;">
		<img src="../images/logo-green.png" width="250" height="250" alt="">
		</div>
		<div class="container" style="width:500px">
			<div class="row">
				<div class="col-md-12">
					<form action="/auth/login" method="POST">
						<div class="form-group">
							<input type="email" name="email" class="form-control" placeholder="E-mail">
						</div>
						<div class="form-group">  
							<input type="password" name="password" class="form-control" placeholder="Password">
						</div>
						<button type="submit" class="btn btn-outline-primary">Log In</button>
					</form>
				</div>
			</div>	
		</div>
		<div class="container" style="width:500px" >
			<p style="color: white;">Don't have account? <a href="/auth/signup">Sign up</a></p>
		</div>

		{{#if errorMessage}}
		<div class="container" id="error-message" style="width:500px">
			<p>{{errorMessage}}</p>
		</div>
		{{/if}}
  </div>
